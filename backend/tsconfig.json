{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "paths": {
        "@config/*": ["config/*"]
      },
      "types": ["node", "express", "multer"],
      "typeRoots": ["./node_modules/@types", "./node_modules/mysql2/types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }